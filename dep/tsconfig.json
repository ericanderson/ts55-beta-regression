{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "dep/src/index.ts"
  ],
  "references": []
}